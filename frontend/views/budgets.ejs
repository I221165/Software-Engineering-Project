<section>
  <h2>Budgets</h2>
  <% if (error) { %>
    <p>Error: <%= error %></p>
  <% } else if (budgets && budgets.length > 0) { %>
    <% budgets.forEach(budget => { %>
      <h3>Budget for <%= budget.month %>/<%= budget.year %></h3>
      <ul>
        <% budget.categories.forEach(cat => { %>
          <li>
            <%= cat.category %>: Limit $<%= cat.limit %>, Spent $<%= cat.spent %>
          </li>
        <% }); %>
      </ul>
    <% }); %>
  <% } else { %>
    <p>No budgets found.</p>
  <% } %>
</section>