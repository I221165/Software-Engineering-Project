<section>
  <h2>Transactions</h2>
  <% if (error) { %>
    <p>Error: <%= error %></p>
  <% } else if (transactions && transactions.length > 0) { %>
    <table>
      <thead>
        <tr>
          <th>User</th>
          <th>Amount</th>
          <th>Category</th>
          <th>Description</th>
          <th>Type</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
        <% transactions.forEach(t => { %>
          <tr>
            <td><%= t.user.name %></td>
            <td><%= t.amount %></td>
            <td><%= t.category %></td>
            <td><%= t.description %></td>
            <td><%= t.type %></td>
            <td><%= new Date(t.date).toLocaleDateString() %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <p>No transactions found.</p>
  <% } %>
</section>